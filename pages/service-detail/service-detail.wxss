@import "./service-detail.skeleton.wxss";
.container {
    font-size: 28rpx;
    box-sizing: border-box;
    background-color: #efefef;
    width: 100%;
}

.service-info {
    width: 100%;
    background-color: #fff;
    padding-bottom: 30rpx;
}

.service-container {
    padding-bottom: 300rpx;
}

.cover-image {
    width: 100%;
}

.row {
    display: flex;
    align-items: center;
    margin-top: 30rpx;
    padding: 0rpx 30rpx;
}
.row-space-between {
    justify-content: space-between;
}
.title {
    font-size: 40rpx;
    font-weight: bold;
}

.category {
    display: flex;
    align-items: center;
    margin-left: 20rpx;
}

.tag-text {
    margin-left: 10rpx;
}

.publisher {

}

.score {
    margin-left: 30rpx;
    color: #f27013;
}

.price {
    font-size: 32rpx;
    color: red;
}

.service-status {
    background-color: #fff;
    width: 100%;
    padding: 30rpx;
    margin-top: 30rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.service-comment {
    background-color: #fff;
    width: 100%;
    padding: 30rpx;
    margin-top: 30rpx;
    box-sizing: border-box;
    min-height: 500rpx;
}

.service-comment-title {
    padding-bottom: 20rpx;
    border-bottom: 1px solid #efefef;
}

.service-comment-list {
    margin-top: 30rpx;
}

.service-comment-item {
    margin-bottom: 30rpx;
    padding-bottom: 30rpx;
    border-bottom: 1px solid #efefef;
}

.action-bar {
    background-color: #fff;
    width: 100%;
    padding: 30rpx;
    box-sizing: border-box;
    border-top: 1px solid #efefef;
    position: fixed;
    bottom: 0;
    z-index: 2;
}

.inner-container {
    padding-bottom: 250rpx;
}